<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.schoolcom.logindemo.RegisterActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Here"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtRegister"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgt_firstname"
        android:hint="Firstname"
        android:layout_below="@+id/txtRegister"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgt_lastname"
        android:hint="Lastname"
        android:layout_below="@+id/rgt_firstname"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgt_username"
        android:hint="Username"
        android:layout_below="@+id/rgt_lastname"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgt_password"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_below="@+id/rgt_username"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgt_button"
        android:text="Register"
        android:layout_below="@+id/rgt_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="register"/>


</RelativeLayout>
